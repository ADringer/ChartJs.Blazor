@page "/MixedChart"
@using ChartJs.Blazor.ChartJS.BarChart.Dataset
@using ChartJs.Blazor.ChartJS.LineChart
@using ChartJs.Blazor.ChartJS.MixedChart

<h2>Mixed Charts</h2>
<div class="row">
    <button class="btn btn-primary" onclick="@UpdateChart">Update Chart </button>
</div>
<ChartJsMixedChart ref="mixedChartJs" Config="@blazorMixedChartJS" Width="600" Height="300"/>

@functions {

    MixedChartConfig blazorMixedChartJS { get; set; }
    ChartJsMixedChart mixedChartJs;

    protected override void OnInit()
    {
        blazorMixedChartJS = blazorMixedChartJS ?? new MixedChartConfig
        {
            CanvasId = "myFirstMixedChart",
            Options = new MixedChartOptions
            {
                Text = "Sample chart from Blazor",
                Display = true,
                Responsive = true
            },
            Data = new MixedChartData
            {
                Labels = new List<string> {"Red", "Blue", "Yellow", "Green", "Purple", "Orange"},
                Datasets = new List<IMixableDataset>
                {
                    new BarChartDataset
                    {
                        Label = "# of Votes from blazor",
                        BackgroundColor = "#4465fe",
                        BorderColor = "#4465fe",
                        Data = new List<object> {19, 12, 5, 3, 3, 2}
                    },
                    new LineChartDataset
                    {
                        BackgroundColor = "#ff6384",
                        BorderColor = "#ff6384",
                        Label = "# of Votes from blazor",
                        Data = new List<object> {19, 12, 5, 3, 3, 2},
                        Fill = false,
                        BorderWidth = 2,
                        PointRadius = 3,
                        PointBorderWidth = 1
                    }
                    ,
                    new BarChartDataset
                    {
                        Label = "# of Votes from blazor",
                        BackgroundColor = "#cc65fe",
                        BorderColor = "#cc65fe",
                        Data = new List<object> {19, 12, 5, 3, 3, 2}
                    }
                }
            }
        };
    }

    protected override void OnAfterRender()
    {
        Console.WriteLine("OnAfterRender");
        mixedChartJs.UpdateChart(blazorMixedChartJS);
    }

    public void UpdateChart()
    {
        blazorMixedChartJS.Data.Labels.Add($"New {DateTime.Now.Second}");
        blazorMixedChartJS.Data.Datasets.ForEach(dataset => dataset.Data.Add(DateTime.Now.Second));

        mixedChartJs.UpdateChart(blazorMixedChartJS);
    }

}